<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Greeting Customer!"
        />
    <TextView
        android:id="@+id/txt2"
        android:layout_below="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To improve our customer service and provide you better customer support please fill out this form."
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/txt2"
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Rate Our Service Quality"
        />
    <RatingBar
        android:layout_below="@+id/txt3"
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/r1"
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Rate our Service Time Delivery"
        />
    <RatingBar
        android:layout_below="@+id/txt4"
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/r2"
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Rate Our Service Accuracy. Do We Understand your problem"
        />
    <RatingBar
        android:layout_below="@+id/txt5"
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/r3"
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. Do We Provide Services Consistantly?"
        />
    <RatingBar
        android:layout_below="@+id/txt6"
        android:id="@+id/r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button

        android:layout_below="@+id/r4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submitbtn"

        />


</RelativeLayout>